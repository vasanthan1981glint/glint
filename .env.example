# Google Cloud Storage Video Configuration
# Copy this file to .env and fill in your actual values

# ===== GOOGLE CLOUD STORAGE CONFIGURATION =====
# Get these from Google Cloud Console -> IAM & Admin -> Service Accounts
GOOGLE_CLOUD_PROJECT_ID=your_project_id_here
GOOGLE_CLOUD_BUCKET=your_bucket_name_here
GOOGLE_CLOUD_CREDENTIALS={"type":"service_account","project_id":"..."}

# ===== BACKEND API CONFIGURATION =====
# Your backend server URL (Railway, Heroku, etc.)
EXPO_PUBLIC_API_URL=https://glint-production-b62b.up.railway.app

# ===== FIREBASE CONFIGURATION =====
# Get these from Firebase Console -> Project Settings -> General
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# ===== DEVELOPMENT SETTINGS =====
# Set to 'true' for development mode
EXPO_PUBLIC_DEV_MODE=true

# ===== OPTIONAL: WEBHOOK CONFIGURATION =====
# For production - webhook endpoint for notifications
# WEBHOOK_SECRET=your_webhook_secret
