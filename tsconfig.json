{
  "extends": "./node_modules/expo/tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "jsx": "react-native",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "types": ["react", "react-native", "expo"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
  "docs/**/*",
  "components/FullScreenVideoPlayer_broken.tsx"
  ]
}
